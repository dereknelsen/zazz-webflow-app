{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowJs": true,
		"checkJs": true,
		/* Preact Config */
		"jsx": "react-jsx",
		"jsxImportSource": "preact",
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"react": [
				"./node_modules/preact/compat/"
			],
			"react-dom": [
				"./node_modules/preact/compat/"
			],
			"@/*": [
				"./src/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./node_modules/@webflow"
		]
	},
	"include": [
		"node_modules/vite/client.d.ts",
		"**/*"
	]
}
